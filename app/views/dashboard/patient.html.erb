<%= turbo_stream_from [current_user, :video_calls] %>

<h1 class="mb-4">Welcome <%= @dashboard.user.name %> ðŸ‘‹</h1>
<div>
  <div class="d-flex">
    <div id="video_calls">
      <% if @dashboard.video_calls.not_completed.empty? %>
        <div class="jumbotron">
          <h1 class="display-4">You have no video visit schedule or in progress</h1>
          <p class="lead">You can start one by clicking the button below or from the top menu bar.</p>
          <hr class="my-4">
          <%= link_to "Start New Video Call", new_video_call_path, class: "btn btn-primary btn-lg" %>
        </div>
      <% else %>
        <% @dashboard.video_calls.not_completed.each do |video_call| %>
          <%= render partial: "video_calls/card", locals: { video_call: video_call } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
