<%= turbo_stream_from [:video_calls] %>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Reason</th>
        <th scope="col">Started at</th>
      </tr>
    </thead>
    <tbody id="video_calls">
      <%= render(
        partial: "video_calls/video_call_row",
        collection: @dashboard.video_calls.not_completed,
        as: :video_call 
      )
      %>
    </tbody>
  </table>
</div>
